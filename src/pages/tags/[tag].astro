---
import BlogPost from "../../components/BlogPost.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const allPosts = Object.values(
    import.meta.glob("../posts/*.md", { eager: true }),
  );

  const allTags = allPosts.map((post: any) => {
    return post.frontmatter.tags as string[]
  });
  
  const uniqueTags = [...new Set(allTags.flat())];
  return uniqueTags.map((tag) => {
    const posts = allPosts.filter((post: any) => post.frontmatter.tags.includes(tag));
    return {
      params: { tag },
      props: { posts }
    };
  })
}

const { tag } = Astro.params;
const { posts } = Astro.props;

---

<BaseLayout pageTitle={`Posts with tag "${tag}"`}>
  <ul>
    {
      posts.map((post: any) => (
        <BlogPost url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</BaseLayout>
