<style>
  .social-icons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .social-icons a {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 2.5rem;
    height: 2.5rem;
    transition: transform 0.5s ease, opacity 0.5s ease;
  }

  .social-icons a:hover {
    opacity: 0.8;
    transform: scale(1.2);
  }

  .social-icons a svg path {
    transition: fill 0.5s ease, opacity 0.5s ease;
  }

  .social-icons a:hover svg path {
    fill: #a343cf;
  }

  .social-icons svg {
    width: 75%;
    height: 75%;
  }
</style>

